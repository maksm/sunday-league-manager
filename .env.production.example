# Production Environment Variables
# Copy this file to .env.production and update with your actual values

# Database Configuration
# Option 1: SQLite (Default - Good for small/medium usage)
DATABASE_URL="file:/app/data/production.db"

# Option 2: PostgreSQL (Recommended for production)
# DATABASE_URL="postgresql://sunday_league:password@postgres:5432/sunday_league"
# POSTGRES_PASSWORD="your-secure-postgres-password"

# NextAuth Configuration
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-generated-secret-with-at-least-32-characters"
NEXTAUTH_URL="https://yourdomain.com"

# Application Configuration
NEXT_PUBLIC_LOCALE="en"
NEXT_PUBLIC_APP_NAME="Sunday League Manager"

# Node Environment
NODE_ENV="production"
